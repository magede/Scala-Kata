<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <!-- !! Do not edit this file - unless you know what you are doing !! -->

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codingkata.unit</groupId>
    <artifactId>fizz-buzz-solv-scala</artifactId>
    <version>1302376469</version>
    <name>fizz-buzz-scala</name>
    <packaging>jar</packaging>
    <url>www.codingkata.org</url>

    <parent>
        <groupId>org.codingkata</groupId>
        <artifactId>parent-solv</artifactId>
        <version>1.5.0</version>
    </parent>

    <repositories>
        <repository>
            <id>codingkata-release</id>
            <url>http://codingkata.org/repo/release</url>
        </repository>

        <repository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${language.version}</version>
        </dependency>

        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>fizz-buzz-task</artifactId>
            <version>${kata.version}</version>
        </dependency>

        <!-- TEST -->
        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>common-test</artifactId>
            <scope>test</scope>
        </dependency>

		<dependency>
			<groupId>org.scalatest</groupId>
			<artifactId>scalatest</artifactId>
			<version>1.3</version>
		</dependency>	
	
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.14</version>
			<scope>test</scope>
		</dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/code</sourceDirectory>
        <testSourceDirectory>src/test/code</testSourceDirectory>

        <plugins>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <sourceDir>src/main/code</sourceDir>
                        </configuration>
                    </execution>
                    <execution>
                        <id>testcompile</id>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <sourceDir>src/test/code</sourceDir>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <scalaVersion>${language.version}</scalaVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <kata.version>1.1k</kata.version>
        <language.version>2.8.0</language.version>
    </properties>

</project>
